{
  "name": "resumeletterai-backend",
  "version": "1.0.0",
  "main": "src/service.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --watchAll --verbose",
    "test:coverage": "jest --coverage",
    "build": "echo 'Backend build completed'",
    "clean": "rm -rf node_modules && yarn install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "db:reset": "node scripts/resetDatabase.js",
    "health": "curl -f http://localhost:3000/healthz || exit 1",
    "security:audit": "yarn audit --level moderate",
    "security:check": "yarn audit --groups dependencies",
    "prod:start": "NODE_ENV=production node src/server.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.28.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.20.0",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.2",
    "uuid": "^13.0.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "keywords": [
    "api",
    "resume",
    "restful",
    "enterprise",
    "mongodb",
    "redis",
    "jwt",
    "nodejs",
    "express"
  ],
  "author": {
    "name": "Nozibul Islam",
    "email": "nozibulislamspi@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nozibul/ResumeLetterAI/tree/develop/backend"
  }
}
